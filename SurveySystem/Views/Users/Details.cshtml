@model SurveySystem.Models.User

@{
    ViewData["Title"] = "Chi tiết User";
}

<div class="detail-container">
    <div class="detail-header">
        <h1 class="detail-title">Chi tiết User</h1>
        <p class="detail-subtitle">Thông tin chi tiết về user</p>
    </div>

    <div class="detail-section">
        <h3 class="detail-section-title">Thông tin cơ bản</h3>
        
        <div class="detail-row">
            <div class="detail-label">Họ và tên:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.FullName)</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Email:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Email)</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Cấp độ:</div>
            <div class="detail-value">
                <span class="badge badge-outline-primary">@Html.DisplayFor(model => model.Level)</span>
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Trạng thái:</div>
            <div class="detail-value">
                @if (Model.Status == true)
                {
                    <span class="badge badge-success">Active</span>
                }
                else
                {
                    <span class="badge badge-danger">Inactive</span>
                }
            </div>
        </div>
    </div>

    <div class="detail-section">
        <h3 class="detail-section-title">Phân quyền</h3>
        
        <div class="detail-row">
            <div class="detail-label">Vai trò:</div>
            <div class="detail-value">
                <span class="badge badge-info">@Html.DisplayFor(model => model.Role.RoleName)</span>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ResetToken))
    {
        <div class="detail-section">
            <h3 class="detail-section-title">Thông tin khôi phục</h3>
            
            <div class="detail-row">
                <div class="detail-label">Reset Token:</div>
                <div class="detail-value">
                    <code>@Html.DisplayFor(model => model.ResetToken)</code>
                </div>
            </div>
            
            @if (Model.ResetTokenExpiry.HasValue)
            {
                <div class="detail-row">
                    <div class="detail-label">Hết hạn:</div>
                    <div class="detail-value">@Html.DisplayFor(model => model.ResetTokenExpiry)</div>
                </div>
            }
        </div>
    }

    <div class="detail-actions">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-warning">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
        <a asp-action="Delete" asp-route-id="@Model?.UserId" class="btn btn-danger">
            <i class="fas fa-trash"></i> Xóa
        </a>
    </div>
</div>
