@model IEnumerable<SurveySystem.Models.User>

@{
    ViewData["Title"] = "Quản lý Users";
}

<div class="page-header">
    <h1 class="page-title">Quản lý Users</h1>
    <div class="page-actions">
        <a asp-action="Create" class="create-btn">Tạo mới</a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-users"></i>
        </div>
        <h3 class="empty-state-title">Chưa có user nào</h3>
        <p class="empty-state-text">Bắt đầu bằng cách tạo user đầu tiên</p>
        <a asp-action="Create" class="empty-state-action">Tạo User</a>
    </div>
}
else
{
    <div class="data-table">
        <table class="table">
            <thead>
                <tr>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Level</th>
                    <th>Status</th>
                    <th>Role</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => item.FullName)</strong>
                        </td>
                        <td>
                            <span class="text-muted">@Html.DisplayFor(modelItem => item.Email)</span>
                        </td>
                        <td>
                            <span class="badge badge-outline-primary">@Html.DisplayFor(modelItem => item.Level)</span>
                        </td>
                        <td>
                            @if (item.Status == true)
                            {
                                <span class="badge badge-success">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <span class="badge badge-info">@Html.DisplayFor(modelItem => item.Role.RoleName)</span>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Details" asp-route-id="@item.UserId" class="btn-details">
                                    <i class="fas fa-eye"></i> Chi tiết
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.UserId" class="btn-edit">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.UserId" class="btn-delete">
                                    <i class="fas fa-trash"></i> Xóa
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
