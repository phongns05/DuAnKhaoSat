@model SurveySystem.Models.User

@{
    ViewData["Title"] = "Chỉnh sửa User";
}

<div class="form-container">
    <div class="form-header">
        <h1 class="form-title">Chỉnh sửa User</h1>
        <p class="form-subtitle">Cập nhật thông tin user</p>
    </div>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="UserId" />
        
        <div class="form-section">
            <h3 class="form-section-title">Thông tin cơ bản</h3>
            
            <div class="form-group">
                <label asp-for="FullName" class="form-label required">Họ và tên</label>
                <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                <span asp-validation-for="FullName" class="form-text text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Email" class="form-label required">Email</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="example@company.com" />
                <span asp-validation-for="Email" class="form-text text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="PasswordHash" class="form-label">Mật khẩu mới (để trống nếu không đổi)</label>
                <input asp-for="PasswordHash" class="form-control" type="password" placeholder="Nhập mật khẩu mới" />
                <span asp-validation-for="PasswordHash" class="form-text text-danger"></span>
            </div>
        </div>

        <div class="form-section">
            <h3 class="form-section-title">Phân quyền</h3>
            
            <div class="form-group">
                <label asp-for="RoleId" class="form-label required">Vai trò</label>
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId">
                    <option value="">-- Chọn vai trò --</option>
                </select>
                <span asp-validation-for="RoleId" class="form-text text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Level" class="form-label required">Cấp độ</label>
                <select asp-for="Level" class="form-control">
                    <option value="">-- Chọn cấp độ --</option>
                    <option value="Junior">Junior</option>
                    <option value="Middle">Middle</option>
                    <option value="Senior">Senior</option>
                </select>
                <span asp-validation-for="Level" class="form-text text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Status" class="form-label">Trạng thái</label>
                <div class="form-check">
                    <input asp-for="Status" class="form-check-input" />
                    <label asp-for="Status" class="form-check-label">Kích hoạt tài khoản</label>
                </div>
                <span asp-validation-for="Status" class="form-text text-danger"></span>
            </div>
        </div>

        <div class="form-section">
            <h3 class="form-section-title">Thông tin khôi phục (tùy chọn)</h3>
            
            <div class="form-group">
                <label asp-for="ResetToken" class="form-label">Reset Token</label>
                <input asp-for="ResetToken" class="form-control" placeholder="Token khôi phục mật khẩu" />
                <span asp-validation-for="ResetToken" class="form-text text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ResetTokenExpiry" class="form-label">Hết hạn Token</label>
                <input asp-for="ResetTokenExpiry" class="form-control" type="datetime-local" />
                <span asp-validation-for="ResetTokenExpiry" class="form-text text-danger"></span>
            </div>
        </div>

        <div class="form-actions">
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Lưu thay đổi
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
