@model SurveySystem.Models.User

@{
    ViewData["Title"] = "Xóa User";
}

<div class="delete-container">
    <div class="delete-header">
        <div class="delete-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h2 class="delete-title">Xác nhận xóa User</h2>
        <p class="delete-message">Bạn có chắc chắn muốn xóa user này không? Hành động này không thể hoàn tác.</p>
    </div>

    <div class="delete-details">
        <h4>Thông tin User sẽ bị xóa:</h4>
        
        <div class="detail-row">
            <div class="detail-label">Họ và tên:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.FullName)</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Email:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Email)</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Cấp độ:</div>
            <div class="detail-value">
                <span class="badge badge-outline-primary">@Html.DisplayFor(model => model.Level)</span>
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Vai trò:</div>
            <div class="detail-value">
                <span class="badge badge-info">@Html.DisplayFor(model => model.Role.RoleName)</span>
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Trạng thái:</div>
            <div class="detail-value">
                @if (Model.Status == true)
                {
                    <span class="badge badge-success">Active</span>
                }
                else
                {
                    <span class="badge badge-danger">Inactive</span>
                }
            </div>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        
        <div class="delete-actions">
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i> Hủy bỏ
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Xác nhận xóa
            </button>
        </div>
    </form>
</div>
