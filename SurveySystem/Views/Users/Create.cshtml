@model SurveySystem.Models.User

@{
    ViewData["Title"] = "Tạo User mới";
}

<div class="form-container">
    <div class="form-header">
        <h1 class="form-title">Tạo User mới</h1>
        <p class="form-subtitle">Thêm user mới vào hệ thống</p>
    </div>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        
        <div class="form-section">
            <h3 class="form-section-title">Thông tin cơ bản</h3>
            
            <div class="form-group">
                <label asp-for="FullName" class="form-label required">Họ và tên</label>
                <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" required />
                <span asp-validation-for="FullName" class="form-text text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Email" class="form-label required">Email</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="example@company.com" required />
                <span asp-validation-for="Email" class="form-text text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="PasswordHash" class="form-label required">Mật khẩu</label>
                <input asp-for="PasswordHash" class="form-control" type="password" placeholder="Nhập mật khẩu" required />
                <span asp-validation-for="PasswordHash" class="form-text text-danger"></span>
            </div>
        </div>

        <div class="form-section">
            <h3 class="form-section-title">Phân quyền</h3>
            
            <div class="form-group">
                <label asp-for="RoleId" class="form-label required">Vai trò</label>
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId" required>
                    <option value="">-- Chọn vai trò --</option>
                </select>
                <span asp-validation-for="RoleId" class="form-text text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Level" class="form-label required">Cấp độ</label>
                <select asp-for="Level" class="form-control" required>
                    <option value="">-- Chọn cấp độ --</option>
                    <option value="Junior">Junior</option>
                    <option value="Middle">Middle</option>
                    <option value="Senior">Senior</option>
                </select>
                <span asp-validation-for="Level" class="form-text text-danger"></span>
            </div>
        </div>

        <div class="form-actions">
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Tạo User
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
