@model SurveySystem.Models.Assignment

@{
    ViewData["Title"] = "Chỉnh sửa assignment";
}

<style>
/* Assignment Edit Page Enhancement */
.edit-container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    max-width: 800px;
    margin: 0 auto;
}

.edit-header {
    background: linear-gradient(135deg, #ffc107 0%, #ff8f00 100%);
    color: white;
    padding: 2rem;
    text-align: center;
}

.edit-header h2 {
    margin: 0;
    font-weight: 600;
}

.edit-form {
    padding: 2rem;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    font-weight: 600;
    color: #495057;
    margin-bottom: 0.5rem;
    display: block;
}

.form-control, .form-select {
    border-radius: 8px;
    border: 1px solid #ced4da;
    padding: 0.75rem 1rem;
    transition: all 0.3s ease;
    width: 100%;
}

.form-control:focus, .form-select:focus {
    border-color: #ffc107;
    box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    outline: none;
}

.btn {
    border-radius: 8px;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    margin-right: 0.5rem;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.btn-primary {
    background: #ffc107;
    color: #212529;
}

.btn-secondary {
    background: #6c757d;
    color: white;
}

/* Page Header */
.page-header {
    background: linear-gradient(135deg, #ffc107 0%, #ff8f00 100%);
    color: white;
    padding: 2rem 0;
    margin-bottom: 2rem;
    border-radius: 0 0 20px 20px;
}

.page-header h1 {
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.page-header p {
    opacity: 0.9;
    margin: 0;
}

/* Responsive */
@@media (max-width: 768px) {
    .edit-form {
        padding: 1rem;
    }
    
    .btn {
        width: 100%;
        margin-bottom: 0.5rem;
        margin-right: 0;
    }
}
</style>

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1><i class="fas fa-edit"></i> Chỉnh sửa assignment</h1>
                <p class="mb-0">Cập nhật thông tin phân công bài test</p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="edit-container">
        <div class="edit-header">
            <h2><i class="fas fa-edit"></i> Chỉnh sửa assignment</h2>
        </div>
        
        <div class="edit-form">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AssignId" />
            <div class="form-group">
                <label asp-for="TestId" class="control-label">Bài test</label>
                <select asp-for="TestId" class="form-control">
                    <option value="">Chọn bài test</option>
                    @if (ViewBag.Tests != null)
                    {
                        @foreach (var test in ViewBag.Tests as List<SurveySystem.Models.Test>)
                        {
                            <option value="@test.TestId" selected="@(test.TestId == Model.TestId)">@test.Title</option>
                        }
                    }
                </select>
                <span asp-validation-for="TestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Người dùng</label>
                <select asp-for="UserId" class="form-control">
                    <option value="">Chọn người dùng</option>
                    @if (ViewBag.Users != null)
                    {
                        @foreach (var user in ViewBag.Users as List<SurveySystem.Models.User>)
                        {
                            <option value="@user.UserId" selected="@(user.UserId == Model.UserId)">@user.FullName (@user.Email)</option>
                        }
                    }
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeptId" class="control-label">Phòng ban</label>
                <select asp-for="DeptId" class="form-control">
                    <option value="">Chọn phòng ban</option>
                    @if (ViewBag.Departments != null)
                    {
                        @foreach (var dept in ViewBag.Departments as List<SurveySystem.Models.Department>)
                        {
                            <option value="@dept.DeptId" selected="@(dept.DeptId == Model.DeptId)">@dept.DeptName</option>
                        }
                    }
                </select>
                <span asp-validation-for="DeptId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignedDate" class="control-label">Ngày phân công</label>
                <input asp-for="AssignedDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="AssignedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label">Hạn chót</label>
                <input asp-for="Deadline" class="form-control" type="datetime-local" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Lưu thay đổi
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
            </div>
        </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
