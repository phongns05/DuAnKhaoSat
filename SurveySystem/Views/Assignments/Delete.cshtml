@model SurveySystem.Models.Assignment

@{
    ViewData["Title"] = "Xóa Assignment";
}

<div class="delete-container">
    <div class="delete-header">
        <div class="delete-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h2 class="delete-title">Xác nhận xóa Assignment</h2>
        <p class="delete-message">Bạn có chắc chắn muốn xóa assignment này không? Hành động này không thể hoàn tác.</p>
    </div>

    <div class="delete-details">
        <h4>Thông tin Assignment sẽ bị xóa:</h4>
        
        <div class="detail-row">
            <div class="detail-label">Ngày giao:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.AssignedDate)</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Hạn chót:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Deadline)</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Department ID:</div>
            <div class="detail-value">
                <span class="badge badge-outline-primary">@Html.DisplayFor(model => model.Dept!.DeptId)</span>
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Test ID:</div>
            <div class="detail-value">
                <span class="badge badge-info">@Html.DisplayFor(model => model.Test!.TestId)</span>
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">User ID:</div>
            <div class="detail-value">
                <span class="badge badge-warning">@Html.DisplayFor(model => model.User!.UserId)</span>
            </div>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AssignId" />
        
        <div class="delete-actions">
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i> Hủy bỏ
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Xác nhận xóa
            </button>
        </div>
    </form>
</div>
