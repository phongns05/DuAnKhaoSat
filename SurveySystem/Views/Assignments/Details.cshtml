@model SurveySystem.Models.Assignment

@{
    ViewData["Title"] = "Chi tiết Assignment";
}

<div class="detail-container">
    <div class="detail-header">
        <h1 class="detail-title">Chi tiết Assignment</h1>
        <p class="detail-subtitle">Thông tin chi tiết về assignment</p>
    </div>

    <div class="detail-section">
        <h3 class="detail-section-title">Thông tin thời gian</h3>
        
        <div class="detail-row">
            <div class="detail-label">Ngày giao:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.AssignedDate)</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Hạn chót:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Deadline)</div>
        </div>
    </div>

    <div class="detail-section">
        <h3 class="detail-section-title">Thông tin liên quan</h3>
        
        <div class="detail-row">
            <div class="detail-label">Department ID:</div>
            <div class="detail-value">
                <span class="badge badge-outline-primary">@Html.DisplayFor(model => model.Dept!.DeptId)</span>
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Test ID:</div>
            <div class="detail-value">
                <span class="badge badge-info">@Html.DisplayFor(model => model.Test!.TestId)</span>
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">User ID:</div>
            <div class="detail-value">
                <span class="badge badge-warning">@Html.DisplayFor(model => model.User!.UserId)</span>
            </div>
        </div>
    </div>

    <div class="detail-actions">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.AssignId" class="btn btn-warning">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
        <a asp-action="Delete" asp-route-id="@Model?.AssignId" class="btn btn-danger">
            <i class="fas fa-trash"></i> Xóa
        </a>
    </div>
</div>
