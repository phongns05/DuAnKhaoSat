@model SurveySystem.Models.Question

@{
    ViewData["Title"] = "Xóa Question";
}

<div class="delete-container">
    <div class="delete-header">
        <div class="delete-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h2 class="delete-title">Xác nhận xóa Question</h2>
        <p class="delete-message">Bạn có chắc chắn muốn xóa question này không? Hành động này không thể hoàn tác.</p>
    </div>

    <div class="delete-details">
        <h4>Thông tin Question sẽ bị xóa:</h4>
        
        <div class="detail-row">
            <div class="detail-label">Nội dung:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Content)</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Loại câu hỏi:</div>
            <div class="detail-value">
                <span class="badge badge-outline-primary">@Html.DisplayFor(model => model.QuestionType)</span>
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Ngày tạo:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.CreatedDate)</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Người tạo:</div>
            <div class="detail-value">
                <span class="badge badge-info">@Html.DisplayFor(model => model.CreatedByNavigation!.UserId)</span>
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Độ khó:</div>
            <div class="detail-value">
                <span class="badge badge-warning">@Html.DisplayFor(model => model.Difficulty!.DifficultyId)</span>
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Kỹ năng:</div>
            <div class="detail-value">
                <span class="badge badge-success">@Html.DisplayFor(model => model.Skill!.SkillId)</span>
            </div>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="QuestionId" />
        
        <div class="delete-actions">
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i> Hủy bỏ
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Xác nhận xóa
            </button>
        </div>
    </form>
</div>
