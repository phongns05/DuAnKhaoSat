@model SurveySystem.Models.Test

@{
    ViewData["Title"] = "Xóa bài test";
}

<style>
/* Delete Page Enhancement */
.delete-container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    max-width: 600px;
    margin: 0 auto;
}

.delete-header {
    background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
    color: white;
    padding: 2rem;
    text-align: center;
}

.delete-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    opacity: 0.9;
}

.delete-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.delete-message {
    opacity: 0.9;
    margin: 0;
}

.delete-details {
    padding: 2rem;
}

.delete-detail-row {
    display: flex;
    margin-bottom: 1rem;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 8px;
    border-left: 4px solid #dc3545;
}

.delete-detail-label {
    font-weight: 600;
    color: #495057;
    min-width: 120px;
    margin-right: 1rem;
}

.delete-detail-value {
    color: #6c757d;
    flex: 1;
}

.delete-actions {
    padding: 2rem;
    background: #f8f9fa;
    display: flex;
    gap: 1rem;
    justify-content: center;
}

.delete-actions .btn {
    border-radius: 8px;
    padding: 0.75rem 2rem;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
}

.delete-actions .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.delete-actions .btn-danger {
    background: #dc3545;
    color: white;
}

.delete-actions .btn-secondary {
    background: #6c757d;
    color: white;
}

/* Page Header */
.page-header {
    background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
    color: white;
    padding: 2rem 0;
    margin-bottom: 2rem;
    border-radius: 0 0 20px 20px;
}

.page-header h1 {
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.page-header p {
    opacity: 0.9;
    margin: 0;
}

/* Responsive */
@@media (max-width: 768px) {
    .delete-actions {
        flex-direction: column;
    }
    
    .delete-detail-row {
        flex-direction: column;
    }
    
    .delete-detail-label {
        min-width: auto;
        margin-bottom: 0.5rem;
    }
}
</style>

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1><i class="fas fa-exclamation-triangle"></i> Xóa bài test</h1>
                <p class="mb-0">Xác nhận xóa bài test khỏi hệ thống</p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="delete-container">
        <div class="delete-header">
            <div class="delete-icon">
                <i class="fas fa-trash-alt"></i>
            </div>
            <div class="delete-title">Bạn có chắc chắn muốn xóa?</div>
            <p class="delete-message">Hành động này không thể hoàn tác!</p>
        </div>
        
        <div class="delete-details">
            <h4 class="mb-3">Thông tin bài test sẽ bị xóa:</h4>
<div>
    <h4>Test</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PassScore)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PassScore)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedByNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedByNavigation.UserId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TestId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
