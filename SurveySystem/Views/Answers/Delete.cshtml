@model SurveySystem.Models.Answer

@{
    ViewData["Title"] = "Xóa Answer";
}

<div class="delete-container">
    <div class="delete-header">
        <div class="delete-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h2 class="delete-title">Xác nhận xóa Answer</h2>
        <p class="delete-message">Bạn có chắc chắn muốn xóa answer này không? Hành động này không thể hoàn tác.</p>
    </div>

    <div class="delete-details">
        <h4>Thông tin Answer sẽ bị xóa:</h4>
        
        <div class="detail-row">
            <div class="detail-label">Nội dung:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.AnswerText)</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Đúng/Sai:</div>
            <div class="detail-value">
                @if (Model.IsCorrect == true)
                {
                    <span class="badge badge-success">Đúng</span>
                }
                else
                {
                    <span class="badge badge-danger">Sai</span>
                }
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Attempt ID:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Attempt!.AttemptId)</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Option ID:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Option!.OptionId)</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Question ID:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Question!.QuestionId)</div>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AnswerId" />
        
        <div class="delete-actions">
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i> Hủy bỏ
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Xác nhận xóa
            </button>
        </div>
    </form>
</div>
