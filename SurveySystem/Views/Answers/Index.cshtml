@model IEnumerable<SurveySystem.Models.Answer>

@{
    ViewData["Title"] = "Quản lý Answers";
}

<div class="page-header">
    <h1 class="page-title">Quản lý Answers</h1>
    <div class="page-actions">
        <a asp-action="Create" class="create-btn">Tạo mới</a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-comments"></i>
        </div>
        <h3 class="empty-state-title">Chưa có answer nào</h3>
        <p class="empty-state-text">Bắt đầu bằng cách tạo answer đầu tiên</p>
        <a asp-action="Create" class="empty-state-action">Tạo Answer</a>
    </div>
}
else
{
    <div class="data-table">
        <table class="table">
            <thead>
                <tr>
                    <th>Nội dung</th>
                    <th>Đúng/Sai</th>
                    <th>Attempt</th>
                    <th>Option</th>
                    <th>Question</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => item.AnswerText)</strong>
                        </td>
                        <td>
                            @if (item.IsCorrect == true)
                            {
                                <span class="badge badge-success">Đúng</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Sai</span>
                            }
                        </td>
                        <td>
                            <span class="text-muted">@Html.DisplayFor(modelItem => item.Attempt!.AttemptId)</span>
                        </td>
                        <td>
                            <span class="text-muted">@Html.DisplayFor(modelItem => item.Option!.OptionId)</span>
                        </td>
                        <td>
                            <span class="text-muted">@Html.DisplayFor(modelItem => item.Question!.QuestionId)</span>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Details" asp-route-id="@item.AnswerId" class="btn-details">
                                    <i class="fas fa-eye"></i> Chi tiết
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.AnswerId" class="btn-edit">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.AnswerId" class="btn-delete">
                                    <i class="fas fa-trash"></i> Xóa
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
