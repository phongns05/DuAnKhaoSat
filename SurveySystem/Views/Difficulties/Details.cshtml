@model SurveySystem.Models.Difficulty

@{
    ViewData["Title"] = "Chi tiết Độ khó";
}

<div class="page-header">
    <div class="header-content">
        <h1><i class="fas fa-eye"></i> Chi tiết Độ khó</h1>
        <p>Xem thông tin chi tiết độ khó</p>
    </div>
    <div class="header-actions">
        <a asp-action="Edit" asp-route-id="@Model.DifficultyId" class="btn btn-primary">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

<div class="detail-container">
    <div class="detail-card">
        <div class="detail-header">
            <i class="fas fa-layer-group"></i>
            <h3>Thông tin Độ khó</h3>
        </div>
        
        <div class="detail-body">
            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-layer-group"></i> Tên độ khó:
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.LevelName)
                </div>
            </div>
        </div>
    </div>
</div>

<div class="action-buttons">
    <a asp-action="Edit" asp-route-id="@Model.DifficultyId" class="btn btn-primary">
        <i class="fas fa-edit"></i> Chỉnh sửa
    </a>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-list"></i> Danh sách
    </a>
</div>
