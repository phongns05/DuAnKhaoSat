@model SurveySystem.Models.Skill

@{
    ViewData["Title"] = "Chi tiết Kỹ năng";
}

<div class="page-header">
    <div class="header-content">
        <h1><i class="fas fa-eye"></i> Chi tiết Kỹ năng</h1>
        <p>Xem thông tin chi tiết kỹ năng</p>
    </div>
    <div class="header-actions">
        <a asp-action="Edit" asp-route-id="@Model.SkillId" class="btn btn-primary">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

<div class="detail-container">
    <div class="detail-card">
        <div class="detail-header">
            <i class="fas fa-brain"></i>
            <h3>Thông tin Kỹ năng</h3>
        </div>
        
        <div class="detail-body">
            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-brain"></i> Tên kỹ năng:
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.SkillName)
                </div>
            </div>
        </div>
    </div>
</div>

<div class="action-buttons">
    <a asp-action="Edit" asp-route-id="@Model.SkillId" class="btn btn-primary">
        <i class="fas fa-edit"></i> Chỉnh sửa
    </a>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-list"></i> Danh sách
    </a>
</div>
