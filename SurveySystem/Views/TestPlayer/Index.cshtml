@model IEnumerable<SurveySystem.Models.Assignment>
@{
    ViewData["Title"] = "Khảo sát được giao";
    var attempts = ViewData["Attempts"] as IEnumerable<SurveySystem.Models.TestAttempt> ?? Enumerable.Empty<SurveySystem.Models.TestAttempt>();
}

<h2 class="mb-3">Khảo sát/Bài test được giao</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Thời lượng (phút)</th>
            <th>Hạn nộp</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var assignment in Model)
    {
        var test = assignment.Test;
        var lastAttempt = attempts.FirstOrDefault(a => a.TestId == test.TestId);
        var isExpired = assignment.Deadline.HasValue && assignment.Deadline.Value < DateTime.UtcNow;
        <tr>
            <td>@test.Title</td>
            <td>@test.Duration</td>
            <td>
                @if (assignment.Deadline.HasValue)
                {
                    <span class="@(isExpired ? "text-danger" : "text-success")">
                        @assignment.Deadline.Value.ToString("dd/MM/yyyy HH:mm")
                    </span>
                }
                else
                {
                    <span class="text-muted">Không có hạn</span>
                }
            </td>
            <td>
                @if (lastAttempt != null)
                {
                    if (lastAttempt.Status == "Completed" || lastAttempt.Status == "PendingReview")
                    {
                        <span class="badge bg-success">Đã hoàn thành</span>
                    }
                    else if (lastAttempt.Status == "InProgress")
                    {
                        <span class="badge bg-warning">Đang làm</span>
                    }
                    else
                    {
                        <span class="badge bg-info">@lastAttempt.Status</span>
                    }
                }
                else
                {
                    <span class="badge bg-secondary">Chưa làm</span>
                }
            </td>
            <td>
                @if (lastAttempt != null && (lastAttempt.Status == "Completed" || lastAttempt.Status == "PendingReview"))
                {
                    <a class="btn btn-outline-secondary btn-sm" asp-action="Result" asp-route-attemptId="@lastAttempt.AttemptId">Xem kết quả</a>
                }
                else if (isExpired)
                {
                    <span class="text-danger">Đã hết hạn</span>
                }
                else
                {
                    <a class="btn btn-primary btn-sm" asp-action="Take" asp-route-id="@test.TestId">Làm ngay</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        Bạn chưa có bài khảo sát nào được giao.
    </div>
}

