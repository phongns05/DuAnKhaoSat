@model IEnumerable<SurveySystem.Models.Role>

@{
    ViewData["Title"] = "Quản lý Vai trò";
}

<div class="page-header">
    <div class="header-content">
        <h1><i class="fas fa-user-tag"></i> Quản lý Vai trò</h1>
        <p>Quản lý các vai trò trong hệ thống</p>
    </div>
    <div class="header-actions">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Tạo mới
        </a>
    </div>
</div>

<div class="data-table">
    <table class="table table-hover">
        <thead class="table-header">
            <tr>
                <th>
                    <i class="fas fa-tag"></i> Tên vai trò
                </th>
                <th class="text-center">
                    <i class="fas fa-cogs"></i> Thao tác
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-row">
                    <td>
                        <div class="item-info">
                            <span class="item-name">@Html.DisplayFor(modelItem => item.RoleName)</span>
                        </div>
                    </td>
                    <td class="action-buttons">
                        <a asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-sm btn-outline-info" title="Chi tiết">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-sm btn-outline-danger" title="Xóa">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <i class="fas fa-user-tag"></i>
        <h3>Chưa có vai trò nào</h3>
        <p>Bắt đầu bằng cách tạo vai trò đầu tiên</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Tạo vai trò
        </a>
    </div>
}
