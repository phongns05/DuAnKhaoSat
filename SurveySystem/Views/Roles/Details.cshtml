@model SurveySystem.Models.Role

@{
    ViewData["Title"] = "Chi tiết Vai trò";
}

<div class="page-header">
    <div class="header-content">
        <h1><i class="fas fa-eye"></i> Chi tiết Vai trò</h1>
        <p>Xem thông tin chi tiết vai trò</p>
    </div>
    <div class="header-actions">
        <a asp-action="Edit" asp-route-id="@Model.RoleId" class="btn btn-primary">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

<div class="detail-container">
    <div class="detail-card">
        <div class="detail-header">
            <i class="fas fa-user-tag"></i>
            <h3>Thông tin Vai trò</h3>
        </div>
        
        <div class="detail-body">
            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-tag"></i> Tên vai trò:
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.RoleName)
                </div>
            </div>
        </div>
    </div>
</div>

<div class="action-buttons">
    <a asp-action="Edit" asp-route-id="@Model.RoleId" class="btn btn-primary">
        <i class="fas fa-edit"></i> Chỉnh sửa
    </a>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-list"></i> Danh sách
    </a>
</div>
