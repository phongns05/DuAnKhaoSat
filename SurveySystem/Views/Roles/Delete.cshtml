@model SurveySystem.Models.Role

@{
    ViewData["Title"] = "Xóa Vai trò";
}

<div class="page-header">
    <div class="header-content">
        <h1><i class="fas fa-trash-alt"></i> Xóa Vai trò</h1>
        <p>Xác nhận xóa vai trò khỏi hệ thống</p>
    </div>
    <div class="header-actions">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

<div class="delete-container">
    <div class="delete-card">
        <div class="delete-header">
            <i class="fas fa-exclamation-triangle text-warning"></i>
            <h3>Cảnh báo</h3>
        </div>
        
        <div class="delete-body">
            <p class="delete-message">
                Bạn có chắc chắn muốn xóa vai trò <strong>"@Model.RoleName"</strong> không?
            </p>
            <p class="delete-warning">
                <i class="fas fa-info-circle"></i>
                Hành động này không thể hoàn tác. Tất cả người dùng có vai trò này sẽ bị ảnh hưởng.
            </p>
        </div>
        
        <div class="delete-info">
            <div class="info-row">
                <div class="info-label">
                    <i class="fas fa-tag"></i> Tên vai trò:
                </div>
                <div class="info-value">
                    @Html.DisplayFor(model => model.RoleName)
                </div>
            </div>
        </div>
    </div>
</div>

<div class="delete-actions">
    <form asp-action="Delete" class="d-inline">
        <input type="hidden" asp-for="RoleId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Xác nhận xóa
        </button>
    </form>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-times"></i> Hủy
    </a>
</div>
