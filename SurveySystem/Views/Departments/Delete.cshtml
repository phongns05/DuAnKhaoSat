@model SurveySystem.Models.Department

@{
    ViewData["Title"] = "Xóa Phòng ban";
}

<div class="page-header">
    <div class="header-content">
        <h1><i class="fas fa-trash-alt"></i> Xóa Phòng ban</h1>
        <p>Xác nhận xóa phòng ban khỏi tổ chức</p>
    </div>
    <div class="header-actions">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

<div class="delete-container">
    <div class="delete-card">
        <div class="delete-header">
            <i class="fas fa-exclamation-triangle text-warning"></i>
            <h3>Cảnh báo</h3>
        </div>
        
        <div class="delete-body">
            <p class="delete-message">
                Bạn có chắc chắn muốn xóa phòng ban <strong>"@Model.DeptName"</strong> không?
            </p>
            <p class="delete-warning">
                <i class="fas fa-info-circle"></i>
                Hành động này không thể hoàn tác. Tất cả nhân viên thuộc phòng ban này sẽ bị ảnh hưởng.
            </p>
        </div>
        
        <div class="delete-info">
            <div class="info-row">
                <div class="info-label">
                    <i class="fas fa-building"></i> Tên phòng ban:
                </div>
                <div class="info-value">
                    @Html.DisplayFor(model => model.DeptName)
                </div>
            </div>
            
            <div class="info-row">
                <div class="info-label">
                    <i class="fas fa-info-circle"></i> Mô tả:
                </div>
                <div class="info-value">
                    @Html.DisplayFor(model => model.Description)
                </div>
            </div>
        </div>
    </div>
</div>

<div class="delete-actions">
    <form asp-action="Delete" class="d-inline">
        <input type="hidden" asp-for="DeptId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Xác nhận xóa
        </button>
    </form>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-times"></i> Hủy
    </a>
</div>
