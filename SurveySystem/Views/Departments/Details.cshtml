@model SurveySystem.Models.Department

@{
    ViewData["Title"] = "Chi tiết Phòng ban";
}

<div class="page-header">
    <div class="header-content">
        <h1><i class="fas fa-eye"></i> Chi tiết Phòng ban</h1>
        <p>Xem thông tin chi tiết phòng ban</p>
    </div>
    <div class="header-actions">
        <a asp-action="Edit" asp-route-id="@Model.DeptId" class="btn btn-primary">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

<div class="detail-container">
    <div class="detail-card">
        <div class="detail-header">
            <i class="fas fa-building"></i>
            <h3>Thông tin Phòng ban</h3>
        </div>
        
        <div class="detail-body">
            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-building"></i> Tên phòng ban:
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.DeptName)
                </div>
            </div>
            
            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-info-circle"></i> Mô tả:
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Description)
                </div>
            </div>
        </div>
    </div>
</div>

<div class="action-buttons">
    <a asp-action="Edit" asp-route-id="@Model.DeptId" class="btn btn-primary">
        <i class="fas fa-edit"></i> Chỉnh sửa
    </a>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-list"></i> Danh sách
    </a>
</div>
