@model SurveySystem.Models.Department

@{
    ViewData["Title"] = "Tạo Phòng ban Mới";
}

<div class="page-header">
    <div class="header-content">
        <h1><i class="fas fa-plus-circle"></i> Tạo Phòng ban Mới</h1>
        <p>Thêm phòng ban mới vào tổ chức</p>
    </div>
    <div class="header-actions">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

<div class="form-container">
    <form asp-action="Create" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        
        <div class="form-group">
            <label asp-for="DeptName" class="form-label">
                <i class="fas fa-building"></i> Tên phòng ban <span class="text-danger">*</span>
            </label>
            <input asp-for="DeptName" class="form-control" required />
            <span asp-validation-for="DeptName" class="text-danger"></span>
            <div class="form-text">Nhập tên phòng ban (ví dụ: IT, HR, Marketing)</div>
        </div>
        
        <div class="form-group">
            <label asp-for="Description" class="form-label">
                <i class="fas fa-info-circle"></i> Mô tả
            </label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
            <div class="form-text">Mô tả chức năng và nhiệm vụ của phòng ban</div>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Tạo phòng ban
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Hủy
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
