@model SurveySystem.Models.User
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="mb-3">Hồ sơ cá nhân</h2>
        @if (ViewData["Message"] != null)
        {
            <div class="alert alert-success">@ViewData["Message"]</div>
        }
        <form asp-action="Profile" method="post">
            <input type="hidden" asp-for="UserId" />
            <div class="mb-3">
                <label class="form-label">Họ tên</label>
                <input asp-for="FullName" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Level</label>
                <input asp-for="Level" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Role</label>
                <input value="@Model.Role?.RoleName" class="form-control" disabled />
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="ChangePassword" class="btn btn-outline-secondary">Đổi mật khẩu</a>
            </div>
        </form>
    </div>
</div>

