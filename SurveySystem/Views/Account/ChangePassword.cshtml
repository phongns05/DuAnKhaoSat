@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<style>
/* Change Password Page Enhancement */
.password-container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    max-width: 500px;
    margin: 0 auto;
}

.password-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 2rem;
    text-align: center;
}

.password-header h2 {
    margin: 0;
    font-weight: 600;
}

.password-form {
    padding: 2rem;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    font-weight: 600;
    color: #495057;
    margin-bottom: 0.5rem;
    display: block;
}

.form-control {
    border-radius: 8px;
    border: 1px solid #ced4da;
    padding: 0.75rem 1rem;
    transition: all 0.3s ease;
    width: 100%;
}

.form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    outline: none;
}

.btn {
    border-radius: 8px;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    margin-right: 0.5rem;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.btn-primary {
    background: #667eea;
    color: white;
}

.btn-secondary {
    background: #6c757d;
    color: white;
}

.btn-outline-secondary {
    background: transparent;
    color: #6c757d;
    border: 1px solid #6c757d;
}

.action-buttons {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    margin-top: 1rem;
}

/* Page Header */
.page-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 2rem 0;
    margin-bottom: 2rem;
    border-radius: 0 0 20px 20px;
}

.page-header h1 {
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.page-header p {
    opacity: 0.9;
    margin: 0;
}

/* Responsive */
@@media (max-width: 768px) {
    .password-form {
        padding: 1rem;
    }
    
    .action-buttons {
        flex-direction: column;
    }
    
    .btn {
        width: 100%;
        margin-bottom: 0.5rem;
        margin-right: 0;
    }
}
</style>

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1><i class="fas fa-key"></i> Đổi mật khẩu</h1>
                <p class="mb-0">Cập nhật mật khẩu tài khoản của bạn</p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Profile" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Quay lại hồ sơ
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="password-container">
        <div class="password-header">
            <h2><i class="fas fa-lock"></i> Đổi mật khẩu</h2>
        </div>
        
        <div class="password-form">
            @if (ViewData["Message"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> @ViewData["Message"]
                </div>
            }
            
            <form asp-action="ChangePassword" method="post" id="changePasswordForm">
                <div class="form-group">
                    <label for="currentPassword">
                        <i class="fas fa-lock"></i> Mật khẩu hiện tại
                    </label>
                    <input name="currentPassword" type="password" class="form-control" required />
                </div>
                
                <div class="form-group">
                    <label for="newPassword">
                        <i class="fas fa-key"></i> Mật khẩu mới
                    </label>
                    <input name="newPassword" type="password" class="form-control" required minlength="6" />
                    <small class="form-text text-muted">Mật khẩu phải có ít nhất 6 ký tự</small>
                </div>
                
                <div class="action-buttons">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Cập nhật
                    </button>
                    <a asp-action="Profile" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Hủy
                    </a>
                </div>
            </form>
            
            @if (ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
            {
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-triangle"></i>
                    @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@err.ErrorMessage</div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('changePasswordForm');
    const currentPassword = form.querySelector('input[name="currentPassword"]');
    const newPassword = form.querySelector('input[name="newPassword"]');
    
    // Add confirmation before submit
    form.addEventListener('submit', function(e) {
        if (newPassword.value.length < 6) {
            e.preventDefault();
            alert('Mật khẩu mới phải có ít nhất 6 ký tự!');
            newPassword.focus();
            return false;
        }
        
        if (currentPassword.value === newPassword.value) {
            e.preventDefault();
            alert('Mật khẩu mới phải khác mật khẩu hiện tại!');
            newPassword.focus();
            return false;
        }
        
        if (!confirm('Bạn có chắc chắn muốn đổi mật khẩu?')) {
            e.preventDefault();
            return false;
        }
    });
    
    // Clear form on cancel
    document.querySelector('a[href*="Profile"]').addEventListener('click', function(e) {
        if (currentPassword.value || newPassword.value) {
            if (!confirm('Bạn có chắc chắn muốn hủy? Dữ liệu đã nhập sẽ bị mất.')) {
                e.preventDefault();
                return false;
            }
        }
    });
});
</script>

